# SpartUp CRM - Ecosystem Platform
# Environment Configuration Example
# 
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (PostgreSQL for production, SQLite for development)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://spartup_crm_user:your_password@localhost:5432/spartup_crm_db

# Alternative: SQLite for development (uncomment to use)
# DATABASE_URL=sqlite:///./app.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT token generation (generate a secure random key)
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Password hashing algorithm
ALGORITHM=HS256

# =============================================================================
# EMAIL CONFIGURATION (for newsletters and notifications)
# =============================================================================

# Email server configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=info@ecosystem-crm.com

# Email security settings
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True
VALIDATE_CERTS=True

# Alternative: Mailtrap for testing (uncomment to use)
# MAIL_SERVER=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment
ENVIRONMENT=development  # development, staging, production

# Debug mode (set to False in production)
DEBUG=True

# Application host and port
HOST=0.0.0.0
PORT=8080

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log file path (optional)
LOG_FILE=logs/spartup_crm.log

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=True

# Enable user registration
ENABLE_USER_REGISTRATION=True

# Enable admin user creation
ENABLE_ADMIN_CREATION=True

# Enable analytics tracking
ENABLE_ANALYTICS=True

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Google Analytics ID (optional)
GOOGLE_ANALYTICS_ID=

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Railway deployment (if using Railway)
RAILWAY_DATABASE_URL=postgresql://...

# Heroku deployment (if using Heroku)
DATABASE_URL=postgresql://...

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Auto-reload on code changes (development only)
AUTO_RELOAD=True

# Show detailed error messages (development only)
SHOW_DETAILED_ERRORS=True

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Force HTTPS in production
FORCE_HTTPS=False

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes

# Session timeout (in minutes)
SESSION_TIMEOUT=480  # 8 hours

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Enable automatic backups
ENABLE_AUTO_BACKUP=False

# Backup frequency (in hours)
BACKUP_FREQUENCY=24

# Backup retention (in days)
BACKUP_RETENTION=30

# Backup storage path
BACKUP_PATH=./backups

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check endpoint
HEALTH_CHECK_ENABLED=True

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=False

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Application name
APP_NAME=SpartUp CRM - Ecosystem

# Application version
APP_VERSION=1.0.0

# Contact information
CONTACT_EMAIL=ecosystem@spartup.edu
CONTACT_PHONE=

# Organization information
ORGANIZATION_NAME=San Jose State University
ORGANIZATION_WEBSITE=https://www.spartup.edu

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Regularly rotate your SECRET_KEY
# 4. Use environment-specific configurations
# 5. Test all email functionality before production deployment
# 6. Monitor logs and performance in production
# 7. Set up proper backup and recovery procedures
# 8. Configure SSL/TLS for production deployments
# 9. Set up monitoring and alerting
# 10. Follow security best practices

